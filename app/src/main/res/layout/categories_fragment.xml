<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingTop="5dp"
        android:clipToPadding="false"
        android:paddingBottom="50dp" android:background="#eeeeee"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        <FrameLayout
                android:id="@+id/actual_btn_categories_fragment"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_foreground"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/actual_textView_categories_fragment"
                    android:textStyle="italic"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:layout_marginVertical="10dp"
                    android:textSize="20dp"
                    android:text="Подборка: Рецепты месяца"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_marginRight="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/right_arrow"
                    android:layout_gravity="center|right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

        </FrameLayout>

        <android.support.v7.widget.CardView
                android:id="@+id/dessert_category"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_foreground"
                app:cardElevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"
                    android:src="@drawable/dessert"
                    android:layout_width="@dimen/category_pic_width"
                    android:layout_height="@dimen/category_pic_height"/>


            <TextView
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@color/black_35_alpha"
                    android:text="@string/dessertsString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/main_food_category"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_foreground"
                app:cardElevation="4dp"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@drawable/main_food"
                    android:layout_width="@dimen/category_pic_width"
                    android:layout_height="@dimen/category_pic_height"/>

            <TextView
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@color/black_35_alpha"
                    android:text="@string/mainFoodString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/meat_category"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_foreground"
                app:cardElevation="4dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <View android:layout_width="match_parent" android:layout_height="match_parent"
                  android:background="@color/black_35_alpha"/>

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@drawable/meat"
                    android:layout_width="@dimen/category_pic_width"
                    android:layout_height="@dimen/category_pic_height"/>

            <TextView
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@color/black_35_alpha"
                    android:text="@string/meatString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/salad_category"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_foreground"
                app:cardElevation="4dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <View android:layout_width="match_parent" android:layout_height="match_parent"
                  android:background="@color/black_35_alpha"/>

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@drawable/salad"
                    android:layout_width="@dimen/category_pic_width"
                    android:layout_height="@dimen/category_pic_height"/>

            <TextView
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@color/black_35_alpha"
                    android:text="@string/saladsString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/soup_category"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_foreground"
                app:cardElevation="4dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@drawable/soup"
                    android:layout_width="@dimen/category_pic_width"
                    android:layout_height="@dimen/category_pic_height"/>

            <TextView
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@color/black_35_alpha"
                    android:text="@string/soupsString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/bakery_category"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_foreground"
                app:cardElevation="4dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bakery"
                    android:layout_width="@dimen/category_pic_width"
                    android:layout_height="@dimen/category_pic_height"/>

            <TextView
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@color/black_35_alpha"
                    android:text="@string/bakeryString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/snacks_category"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_foreground"
                app:cardElevation="4dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@drawable/snacks"
                    android:layout_width="@dimen/category_pic_width"
                    android:layout_height="@dimen/category_pic_height"/>

            <TextView
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@color/black_35_alpha"
                    android:text="@string/snacksString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/drinks_category"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_foreground"
                app:cardElevation="4dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@drawable/drinks"
                    android:layout_width="@dimen/category_pic_width"
                    android:layout_height="@dimen/category_pic_height"/>

            <TextView
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@color/black_35_alpha"
                    android:text="@string/drinksString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>