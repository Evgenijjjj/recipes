<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/index_number_step_row"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:padding="4dp"
                android:text="Шаг 1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:alpha="0.2"
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:id="@+id/image_container_step_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimary"
                    android:layout_marginVertical="10dp"
                    android:id="@+id/image_step_row"
                    android:layout_width="match_parent"
                    android:minHeight="300dp"
                    android:layout_height="match_parent"/>

            <View
                    android:alpha="0.2"
                    android:background="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

        </LinearLayout>

        <TextView
                android:alpha="0.65"
                android:paddingTop="10dp"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:paddingHorizontal="6dp"
                android:paddingBottom="10dp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:id="@+id/description_step_row"
                android:text="В разгаре лето и ЧМ-2018 по футболу. У нас температура подбирается к 40°C, и в такую жару нет никаких сил стоять у плиты. Выручают быстрые и сытные блюда, например, как эти бургеры. И остается больше времени для просмотра любимого футбола. Продолжаем болеть. Впереди еще половина чемпионата!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v7.widget.CardView>